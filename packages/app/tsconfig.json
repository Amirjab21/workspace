{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": true
  },
  "exclude": ["dist", ".next", "out", "next.config.js"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "paths": {
    "@popcorn/ui": ["../ui/src"],
    "@popcorn/ui/*": ["../ui/src/*"],
    "@popcorn/utils": ["../utils/src"],
    "@popcorn/utils/*": ["../utils/src/*"],
    "@popcorn/contracts": ["../contracts/src"],
    "@popcorn/contracts/*": ["../contracts/src/*"]
  }
}
